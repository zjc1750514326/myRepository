<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>用户列表</title>

<script type="text/javascript">
	function deleteEmployees(){
		document.foodsForm.action = "${pageContext.request.contextPath }/sys/employee/batchDelete.action";
		document.foodsForm.submit();
	}
	
	function query(){
		document.foodsForm.action = "${pageContext.request.contextPath }/sys/employee/findEmployeeList.action";
		document.foodsForm.submit();
	}


</script>


    <script type="text/javascript">  
         function checkAll(checkall) {    
             arr = document.getElementsByName('ids' );   
             if (checkall.checked == true) {   
                 for(i=0;i<arr.length;i++){   
                       
                     arr[i].checked = true;   
                 }  
   
                 }else{  
                     for(i=0;i<arr.length;i++){   
                         if((arr[i]).checked==false){  
                             arr[i].checked = true;  
                         }else  
                         {arr[i].checked = false; }  
                     }  
                 }  
     }    
   
</script>  


