<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


	<!-- 食物的service -->
	<bean id="foodService" class="service.impl.FoodServiceImpl"></bean>
	<bean id="employeeService" class="service.impl.EmployeeServiceImpl"></bean>
	<bean id="styleService" class="service.impl.StyleServiceImpl"></bean>



	<!-- 事务的管理，mybatis对数据库的管理,spring中用jdbc进行管理 -->
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<!-- dataSource 数据源在application-dao.xml中就已经配置好了-->
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	
</beans>
