<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mapper.EmployeeMapper" >
  <resultMap id="BaseResultMap" type="empty.Employee" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="empName" property="empname" jdbcType="VARCHAR" />
    <result column="empJob" property="empjob" jdbcType="VARCHAR" />
    <result column="empPs" property="empps" jdbcType="INTEGER" />
  </resultMap>

  <!--根据用户名和密码查询用户(用作登录的)-->
  <select id="select" resultMap="BaseResultMap" parameterType="empty.Employee">
    SELECT empName FROM employee
    WHERE empName = #{empname} AND empPs = #{empps}
  </select>

  <!--动态查询关键字，总记录列表-->
  <select id="selectPageListUseDyc" parameterType="empty.Page" resultMap="BaseResultMap">
    SELECT id,empName,empJob,empPs from employee
    <where>
      <if test="paramEntity.empname !=null"> AND employee.empName LIKE #{paramEntity.empname}</if>
      <if test="paramEntity.empjob !=null"> AND employee.empJob LIKE #{paramEntity.empjob} </if>
    </where>
    limit #{start},#{rows}
  </select>

  <!-- 动态查询关键字，总记录数 -->
  <select id="selectPageCountUseDyc" parameterType="empty.Page" resultType="Integer">
    SELECT COUNT(1) from employee
    <where>
      <if test="paramEntity.empname !=null"> AND employee.empName LIKE #{paramEntity.empname}</if>
      <if test="paramEntity.empjob !=null"> AND employee.empJob LIKE #{paramEntity.empjob} </if>
    </where>
  </select>

  <!-- 插入员工 -->
  <insert id="insert" parameterType="empty.Employee">
    INSERT INTO employee(id,empName,empJob,empPs) VALUES (#{id},#{empname},#{empjob},#{empps})
  </insert>

  <!-- 通过主键批量删除员工 -->
  <delete id="deleteList">
    DELETE FROM employee WHERE id IN
    <foreach collection="array" open="(" close=")" separator="," item="pk">
      #{pk}
    </foreach>
  </delete>

  <update id="update" parameterType="empty.Employee">
    UPDATE employee SET empName=#{empname},empJob=#{empjob},empPs=#{empps}
    WHERE id=#{id}
  </update>
</mapper>